{
	"compilerOptions": {
		"moduleResolution": "node",
    "jsx": "react",
		"noImplicitAny": true,
		"declaration": true,
		"strict": true,
		"lib": [
			"DOM",
			"es2018"
		],
		"module": "commonjs",
		"target": "es6",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist"
	},
	"exclude": [
    "node_modules",
		"build"
	]
}
