{
	"compilerOptions": {
		"moduleResolution": "node",
    "jsx": "react",
		"noImplicitAny": true,
		"strict": true,
		"lib": [
			"DOM",
			"es2018",
		],
		"module": "commonjs",
		"target": "es6",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
			"types/*": [ "./types/*" ],
		}
	},
	"exclude": [
    "node_modules",
		"build"
	]
}
